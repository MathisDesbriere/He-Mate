<h1> Trip Index ! 🚌 📝 </h1>

<% @trips.each do |trip| %>
  <div class="card-trip">
    <div class= "card-trip-title">
      <p>User: <%= trip.user.last_name %></p>
    </div>

    <img src="<%= asset_path('seedTrip.jpeg') %>" />
    <div class="card-trip-infos">
      <div class="card-trip-details">
        <h2><%= trip.title %></h2>
        <p>Description : <%= trip.description %></p>
      </div>
        <div class="card-trip-user">
          <img src="<%= asset_path('seedUser.jpg') %>" alt="avatar" class="avatar-bordered" />
        </div>
        <div class= "card-trip-like">
          <h2> <%= trip.like %> <i class="fa-solid fa-heart"></i> </h2>
        </div>
      </div>
    </div>
  </div>

<% end %>
