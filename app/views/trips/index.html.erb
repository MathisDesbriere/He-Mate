<h1>Trip Index !</h1>
<%= @trips.each do |trip| %>
  <%= image_tag flat.image, class: "img" if flat.image.attached? %>
  <b><%= link_to trip.title, flat_path(trip) %> :</b> <i><u><%= user.first_name %></i></u>; <%= trip.description %>
<% end %>

<%= form_with(model: @trip, url: trips_path, method: :post, local: true) do |form| %>
  <%= form.file_field :image %>
  <%= form.submit "Upload Image" %>
<% end %>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>
