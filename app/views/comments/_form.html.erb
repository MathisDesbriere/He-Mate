<%= simple_form_for([trip, comment],
  data: {
    insert_in_list_target: "form",
    action: "submit->insert-in-list#send"
  }) do |f|
%>
  <div class="input-group">

  <%= f.text_field :content, placeholder: "Add comment here...", class: "form-control post-comment"  %>

  <%= f.submit "Post" , class: "btn-post button"%>
  </div>
<% end %>
